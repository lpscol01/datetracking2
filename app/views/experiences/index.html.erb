<h1>Your recent dates, <%= current_user.fname%>...</h1>

<div class="row">

	<div class="span8 experience-left">
		<% @experiences.each do |experience| %>
		<br>
			<strong>Survey:</strong> <%= link_to experience.fname,  new_experience_survey_path(experience.id, :datee_id => experience.datee_id, :fname =>
				experience.fname) %>

		<br>
			<strong>When:</strong> <%=experience.date.strftime("%b, %d, %Y") %> 
		<br>
			<strong>Where:</strong> <%=experience.location %> 
		<br>
			<strong>Description:</strong> <%=experience.description %>
		<br>
			<strong>Created:</strong> <%= experience.created_at.strftime("%b, %d, %Y") %>
		<br>
		<br>
			<strong>Survey results:</strong> <%= link_to  experience.fname,  experience_survey_path(experience.id, :id => experience.datee_id ) %>
		<hr>
		<% end %>
		<br>
	</div>

	<div class="span4 experience-right">
		<h4>Invite Your Date</h4>

		<div>
			<%=form_tag "/invite_user" do |f| %>
				<%=label_tag :email, "Email" %>
				<%=text_field_tag :email %>
				<%=submit_tag :submit %>
			<% end %>
		</div>

		<% @users.each do |user| %>
		<% @experiences.each do |experience|%>
			<%if user.id == experience.datee_id %>
				<br>
				<%= image_tag user.photo.url (:small)%>
				<h4><%= link_to user.fname, new_experience_path(user_id: user.id, fname: user.fname) %></h4>
				<br>
				<%= link_to "Remove", experience_path(experience), method: :delete, confirm: "Are you sure?" %>
				<br>
			<% end -%>	
		<% end -%>
		<% end -%>
	</div>

</div>



