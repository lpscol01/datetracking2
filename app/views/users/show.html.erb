<h1>User Profiles</h1>

<%= image_tag @user.photo.url (:small)%>
<br>
<br>
<b><%= @user.fname %>
<%= @user.lname %></b>
<br>
<br>
<%= @user.email %>


<% if current_user %>
	<% unless @user == current_user || current_user.requested_datees.include?(@user) || current_user.datees.include?(@user) || current_user.pending_datees.include?(@user) %>

		<% form_for(:relationship, :url => user_datees_path(:user_id => current_user.id, :datee_id => @user.id)) do |f| %>
		<%= submit_tag "Add to My Dates" %>
		<% end %>
	<% end %>
<% end %>